<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.boardserver.category.mapper.CategoryMapper">

    <insert id = "registerCategory" parameterType="CategoryRegisterDAO">
        INSERT INTO category (name)
        VALUES (#{name})
    </insert>

    <update id = "updateCategory">
        UPDATE category
        SET name = #{name}
        WHERE seq = #{seq}
    </update>

    <delete id = "deleteCategory" parameterType="Integer">
        DELETE FROM category
        WHERE seq = #{seq}
    </delete>

</mapper>